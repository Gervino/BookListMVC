
<script type="text/javascript">
        function OpenWindow() {
            window.open("/books/", "_blank", "toolbar=yes,scrollbars=yes,resizable=yes,top=500,left=500,width=900,height=700");
            window.close();
        }
</script>

<br />
<div class="container" row p-0 m-0>
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Book List</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-2 offset-6">
            <a asp-action="Upsert" asp-controller="Books" class="btn btn-info form-control text-white">
                Add New Book
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-3 offset-6">
            <button class="btn btn-primary" onclick="OpenWindow(1)" style="text-align:center; margin:10px;">Open the widow</button>
        </div>
    </div>
    <div class="row">
        <div class="col-12 border p-3">
            <table id="DT_load" class="table table-striped table-bordered" style="width:100%;">
                <thead>
                    <tr>
                        <th>Id</th>
                        @*<th>ColorField</th>*@
                        <th>Name</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

    @section Scripts {
        <script src="~/js/bookList.js" type="text/javascript">

        </script>
    }

